package group23.pacman.model;

import javafx.scene.canvas.GraphicsContext;
import javafx.scene.image.Image;

public class GasZone extends GameObject {
	
	private boolean shouldDraw;
	
	private Image gasZone;
	
	/* Position to draw the GasZone */
	private int x;
	private int y;

	public GasZone() {
		
		this.x = 0;
		this.y = 0;
		
		/* Set Up hitbox */
		hitBox = new Rectangle();
		hitBox.setWidth(0);
		hitBox.setHeight(0);
		hitBox.setX(this.x);
		hitBox.setY(this.y);
		
		this.type = GameObject.TYPE.GASZONE;
		
		shouldDraw = false;
	}
	
	public void draw(GraphicsContext graphicsContext) {
		if (shouldDraw) {
			graphicsContext.drawImage(gasZone,x,y);
		}
    }
	
	public void setX(int x) {
		this.x = x;
	}
	
	public void setY(int y) {
		this.x = y;
	}
	
	public void setShouldDraw(boolean bool) {
		this.shouldDraw = bool;
	}
	
	public boolean getShouldDraw() {
		return shouldDraw;
	}
	
}
