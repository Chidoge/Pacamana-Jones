		    	else if (event.getCode() == KeyCode.RIGHT) {
		    		
		    	}
		    	else if (event.getCode() == KeyCode.ENTER) {
		    		
		    	}
				
		    }	    
		});
		
		
	}
	
	
	@FXML
	private void initialize() {
		
		/* Set up background of this view */
		Image backgroundImage = new Image("bg/game_mode_select_background.png");
